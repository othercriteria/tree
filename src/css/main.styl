@font-face
  font-family "bau"
  src url("http://office-for.com/lib/etc/bau/bauregular.otf")
  font-weight 400
  font-style normal
@font-face
  font-family "bau"
  src url("http://office-for.com/lib/etc/bau/bauregularitalic.otf")
  font-weight 400
  font-style italic
@font-face
  font-family "bau"
  src url("http://office-for.com/lib/etc/bau/baumedium.otf")
  font-weight 500
  font-style normal
@font-face
  font-family "bau"
  src url("http://office-for.com/lib/etc/bau/baumediumitalic.otf")
  font-weight 500
  font-style italic
@font-face
  font-family "bau"
  src url("http://office-for.com/lib/etc/bau/baubold.otf")
  font-weight 600
  font-style normal
@font-face
  font-family "bau"
  src url("http://office-for.com/lib/etc/bau/baubolditalic.otf")
  font-weight 600
  font-style italic

body
html
  font-size 18px
  font-family bau
  font-weight 400
  line-height 1.4rem

a
  color #000
  text-decoration none
  border-bottom 1px solid #000
  display inline-block
  line-height .8rem

body
  font-size .9rem

hr
  display inline-block
  width 6rem
  border 0
  border-top 2px solid #f4f4f4

h2
h3
  margin 0
  margin-top 1rem

h2
h3
h4
strong
  font-weight 500

h4
  margin-bottom .3rem  

h5
  font-style italic
  font-weight 200
  margin 0

h1 code
h2 code
h3 code
  font-size inherit
  background-color #f4f4f4
  padding .3rem

pre
  background-color #f5f5f5
  padding .3rem
  margin-left -.3rem

code
  font-family "source-code-pro"
  font-size .8rem

ul
  list-style none
  padding 0

li:before
  content "+"
  padding-right .3rem
  font-family "source-code-pro"
  font-size .8rem
  font-weight 600

#nav
#cont
  width 42rem
  left 50%
  margin-left -21rem

#nav
  position fixed
  top 0
  z-index 1000
  background-color #fff
  max-height 4rem

#nav.scrolling
  opacity 0
  transition opacity 1s ease-in-out

#nav
#nav:hover
#nav.scrolling:hover
  opacity 1
  transition opacity 1s ease-in-out

#cont
  position absolute
  top 3rem

#load
  display none

#load.load
  display inline-block
  font-weight 500
  position fixed
  left 50%
  bottom 0
  width 5rem
  margin-left 21rem
  background-color #000
  color #fff
  padding .3rem
  text-align center
  font-size .6rem
  letter-spacing .1rem

#nav > div
  height 1.2rem

#nav a
  text-transform uppercase
  font-size .7rem
  font-weight 500
  line-height .8rem
  border-bottom 1px solid #000

#bred a
  font-family "source-code-pro"
  text-transform lowercase

#sibs
  width 100%
  height 0
  margin-left -2rem

#dpad
  float left
  margin-left -4rem
  padding-top .4rem

#nav .arow-up
#nav .arow-next
#nav .arow-prev
  background-repeat no-repeat
  width 1.2rem
  height 1.2rem
  border none

.arow-up
  background-image url("http://office-for.com/lib/etc/arow/a-up.png")
.arow-next
  background-image url("http://office-for.com/lib/etc/arow/a-right.png")
  margin-right -2rem
.arow-prev
  background-image url("http://office-for.com/lib/etc/arow/a-left.png")

#bred
  font-size .6rem

#bred > div
  display inline

#bred a
#kids a
  margin-right .3rem

#bred a
  margin-left .3rem

.short
  width 32rem